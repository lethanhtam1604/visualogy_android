<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/white_corner_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/white_corner_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/removeImgView"
                android:text="From:"
                android:textColor="@color/main_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fromDateValueTV"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/removeImgView"
                android:layout_marginTop="5dp"
                android:background="@drawable/item_new_request_corner_background"
                android:gravity="center"
                android:text="11-10-2016"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/removeImgView"
                android:layout_marginTop="20dp"
                android:text="To:"
                android:textColor="@color/main_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/toDateValueTV"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/removeImgView"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/item_new_request_corner_background"
                android:gravity="center"
                android:text="11-10-2016"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>